#!/usr/bin/env xdotool

#
# Start test
#
exec /bin/bash --norc --noprofile
sleep 0.1

#
# Call app.sh
#
key --delay 50 b a s h space a p p period s h KP_Enter
sleep 0.1

#
# NO user and NO password
#
key --delay 50 KP_Enter
sleep 0.1
key --delay 50 KP_Enter
sleep 0.1

#
# NO password
#
key --delay 50 1 2 3 4 5 6 KP_Enter
sleep 0.1
key --delay 50 KP_Enter
sleep 0.1

#
# NO user
#
key --delay 50 Down 1 2 3 4 5 6 KP_Enter
sleep 0.1
key --delay 50 KP_Enter
sleep 0.1

#
# User and password OK
#
key --delay 50 1 2 3 4 5 6 Down
key --delay 50 1 2 3 4 5 6 KP_Enter
sleep 0.1

#
# Finish test
#
key --delay 50 e x i t KP_Enter
